gem 'datejs-rails', '2.0.1'
gem 'logging-rails', :require => 'logging/rails'

group :production do
  gem 'mysql2', '0.3.15'
end

group :development do
  gem 'sqlite3', '1.3.7'
  gem 'capistrano'
end

# Gems used only for assets and not required
# in production environments by default.
